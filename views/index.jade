extend layout

block content
  .content-wrapper
    .page-header
      h3.page-title
        span.page-title-icon.bg-gradient-primary.text-white.mr-2
          i.mdi.mdi-home
        |       Dashboard
      nav(aria-label='breadcrumb')
        ul.breadcrumb
          li.breadcrumb-item.active(aria-current='page')
            span
            | Overview
            i.mdi.mdi-alert-circle-outline.icon-sm.text-primary.align-middle
    .row
      .col-md-4.stretch-card.grid-margin
        .card.bg-gradient-danger.card-img-holder.text-white
          .card-body
            img.card-img-absolute(src='images/dashboard/circle.svg', alt='circle-image')
            h4.font-weight-normal.mb-3
              | Weekly Sales
              i.mdi.mdi-chart-line.mdi-24px.float-right
            h2.mb-5 $ 15,0000
            h6.card-text Increased by 60%
      .col-md-4.stretch-card.grid-margin
        .card.bg-gradient-info.card-img-holder.text-white
          .card-body
            img.card-img-absolute(src='images/dashboard/circle.svg', alt='circle-image')
            h4.font-weight-normal.mb-3
              | Weekly Orders
              i.mdi.mdi-bookmark-outline.mdi-24px.float-right
            h2.mb-5 45,6334
            h6.card-text Decreased by 10%
      .col-md-4.stretch-card.grid-margin
        .card.bg-gradient-success.card-img-holder.text-white
          .card-body
            img.card-img-absolute(src='images/dashboard/circle.svg', alt='circle-image')
            h4.font-weight-normal.mb-3
              | Visitors Online
              i.mdi.mdi-diamond.mdi-24px.float-right
            h2.mb-5 95,5741
            h6.card-text Increased by 5%
    .row
      .col-md-7.grid-margin.stretch-card
        .card
          .card-body
            .clearfix
              h4.card-title.float-left Visit And Sales Statistics
