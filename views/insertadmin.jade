extend layout

block content
  .content-wrapper.d-flex.align-items-center.auth
          .row.w-100
            .col-lg-4.mx-auto
              .auth-form-light.text-left.p-5
                h4 New Admin
                h6.font-weight-light Signing up is easy. It only takes a few steps
                form.pt-3(action='/insertadmin', method='post')
                  .form-group
                    input#exampleInputUsername1.form-control.form-control-lg(type='text', placeholder='Username', name='username')
                  .form-group
                    input#exampleInputPassword1.form-control.form-control-lg(type='password', placeholder='Password', name='password')
                  .form-group
                    label Upload foto
                    input.file-upload-default(type='file', name='img[]')
                    .input-group.col-xs-12
                      input.form-control.file-upload-info(type='text', disabled='', placeholder='Upload Image', name='filename')
                      span.input-group-append
                        button.file-upload-browse.btn.btn-gradient-primary(type='button') Upload
                    .form-check
                      label.form-check-label.text-muted
                        input.form-check-input(type='checkbox')
                        |                       I agree to all Terms & Conditions
                  .mt-3
                    a.btn.btn-block.btn-gradient-primary.btn-lg.font-weight-medium.auth-form-btn(href='/insertadmin') SIGN UP
        // content-wrapper ends
    
