extend layout

block content

  .content-wrapper
    .page-header
      h3.page-title
        | Forms
      nav(aria-label='breadcrumb')
        ol.breadcrumb
          li.breadcrumb-item
            a(href='#') Forms
          li.breadcrumb-item.active(aria-current='page') Basic elements
    .row
      .col-12.grid-margin.stretch-card
        .card
          .card-body
            h4.card-title Form Menu
            p.card-description
              | Input Menu
            form.forms-sample(action='/insertmenu', method='post')
              //- .form-group
              //-   label(for='exampleSelectGender') Root
              //-   select#root.form-control
              //-     option id Root 1
              //-     option id Root 2
              .form-group
                label(for='exampleInputName1') Root Input
                //- input#menu.form-control(type='text', placeholder='Root', name='root')
                select.form.control(name="root")
                  each dd, i in menu
                    option(value='#{dd.id}') #{dd.menu}
              .form-group
                label(for='exampleInputName2') Menu
                input#menu.form-control(type='text', placeholder='Menu', name='menu')
              .form-group
                label(for='exampleInputName2') Pertanyaan
                input#menu.form-control(type='text', placeholder='Pertanyaan', name='pertanyaan')
              button.btn.btn-gradient-primary.mr-2(type='submit') Submit
              button.btn.btn-light Cancel
    .row          
    .col-lg-12.stretch-card
      .card
        .card-body
          h4.card-title Table with contextual classes
          p.card-description
            | Add class 
            code .table-{color}
          table.table.table-bordered
            thead
              tr.table-danger
                th No
                th id
                th root
                th menu
                th pertanyaan
                th aksi
            tbody
            each data, i in menu
              tr.table-primary
                td #{i+1}
                td #{data.id}
                td #{data.root}
                td #{data.menu}
                td #{data.pertanyaan}
                td
                  a.button.btn.btn-primary(href="/insertmenu/editmenu/"+ data.id) edit
                  button.btn.btn-danger(onclick='app.Delete("'+data.id+'")') hapus
          
          script(src="https://code.jquery.com/jquery-3.3.1.js", integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=", crossorigin="anonymous")
          script.
            var app = new function() {

              //action for delete
              this.Delete = function(data) {
                var r = confirm("Apakah anda yakin ingin menghapus ? ");
                if (r == true) {
                    $.ajax({
                      url: "https://shela.jagopesan.com/insertmenu/delete",
                      method: "POST",
                      data: "id="+data
                    })
                    .done(function(data){
                      location.reload()
                    })
                } else {
                    alert("cancel")
                }
              }
            }    
      // tabel ends
   